<?xml version="1.0" encoding="utf-8"?>
<i.brains.eronville.XScroll
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    android:overScrollMode="never"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/vue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="32dp"
                android:layout_margin="12dp"
                android:layout_height="32dp"
                android:src="@drawable/back" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:id="@+id/property"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Contact property"
                android:layout_margin="12dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/button_circle"
                android:textColor="@color/colorPrimary"
                style="?attr/borderlessButtonStyle" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">
            <com.tmall.ultraviewpager.UltraViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loading"
                android:id="@+id/ville_pager"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/feather_top" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/feather_bottom" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenities"
            android:padding="4dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Air conditioning cooling system"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parking"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cats and Dogs allowed"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cable TV"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kitchen"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/button_circle" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bath and restroom"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorText"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neighbourhood"
            android:padding="4dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">
            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Reset"
                android:alpha=".6"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="12dp"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:background="@drawable/button_circle" />
            <fragment
                android:id="@+id/neighbourhood"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/feather_top" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/feather_bottom" />
        </RelativeLayout>
    </LinearLayout>
</i.brains.eronville.XScroll>