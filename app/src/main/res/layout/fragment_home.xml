<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:id="@+id/vue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/greetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Hi Silver, How are we"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:layout_margin="4dp"
                android:alpha=".2"
                android:background="@drawable/button" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/silv" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:text="Silver" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/agent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Erezi" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/cyn" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Cynthia" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/agent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Valentine" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="end"
                android:padding="2dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorAccent"
                android:text="Agents of the week" />
            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:layout_margin="4dp"
                android:layout_gravity="end"
                android:alpha=".2"
                android:background="@drawable/button" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/search_view"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorAccent" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
            <i.brains.eronville.XListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"
                android:divider="@color/colorTransparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone"
                android:dividerHeight="20dp"
                android:layout_margin="4dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <Button
        android:id="@+id/reload"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reload"
        android:background="@drawable/button_circle"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        style="?attr/borderlessButtonStyle" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/empty"
        android:id="@+id/empty_box"
        android:alpha=".8"
        android:visibility="gone"
        android:padding="120dp"/>
</RelativeLayout>