<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/back"
        android:layout_width="32dp"
        android:layout_margin="12dp"
        android:layout_height="32dp"
        android:src="@drawable/back" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPro"
        android:text="Request for an inspection" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:alpha=".6"
        android:background="@color/colorAccent"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/inspection_picker_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/colorText"/>
    <LinearLayout
        android:id="@+id/inspection_picker_today_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/inspection_morning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Morning"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
        <TextView
            android:id="@+id/inspection_afternoon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Afternoon"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
        <TextView
            android:id="@+id/inspection_evening"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Evening"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:id="@+id/inspection_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/inspection_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/colorText"
            android:text="Tomorrow" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:adjustViewBounds="true"
            android:src="@drawable/drop" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/inspection_picker_morning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Morning"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
        <TextView
            android:id="@+id/inspection_picker_afternoon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Afternoon"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
        <TextView
            android:id="@+id/inspection_picker_evening"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Evening"
            android:padding="12dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/cover"
            android:textColor="@color/colorTextPro" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:text="Contact the agent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chat_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:padding="12dp"
            android:src="@drawable/phone" />
        <ImageView
            android:id="@+id/chat_mail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:padding="12dp"
            android:src="@drawable/mail" />
        <ImageView
            android:id="@+id/chat_whatsapp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:padding="12dp"
            android:src="@drawable/whatsapp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/inspection_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorTextHint" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send inspection request"
        android:textColor="@color/colorPrimary"
        android:paddingTop="10dp"
        android:id="@+id/inspect"
        android:paddingBottom="10dp"
        android:layout_margin="8dp"
        android:background="@drawable/button"
        style="?android:attr/borderlessButtonStyle"/>
</LinearLayout>