<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="#F0F8FE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/filter_price_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:id="@+id/close"
            android:src="@drawable/close"
            android:layout_gravity="end" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="State" />

        <Spinner
            android:id="@+id/filter_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:background="@drawable/spinner" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="Local Govt." />

        <Spinner
            android:id="@+id/filter_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="2"
            android:background="@drawable/spinner" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:text="Price range" />

        <com.jaygoo.widget.RangeSeekBar
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/filter_price"
            app:rsb_gravity="center"
            app:rsb_min="10000"
            app:rsb_max="1000000"
            app:rsb_progress_color="@color/colorAccent"
            app:rsb_progress_height="4dp"
            app:rsb_mode="range"
            app:rsb_indicator_background_color="#00000000" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Filter Results"
        android:background="@drawable/button"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/filter_results"
        style="?attr/borderlessButtonStyle" />
</LinearLayout>