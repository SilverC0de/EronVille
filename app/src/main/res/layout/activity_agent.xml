<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/greetings"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Hi"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="â‚¦0"
                    android:gravity="end"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:padding="4dp"
                    android:src="@drawable/withdraw" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:layout_margin="4dp"
                android:alpha=".2"
                android:background="@drawable/button" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/silv" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:layout_gravity="center"
                        android:text="Silver" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/agent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Erezi" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/cyn" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Cynthia" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="4dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/cover">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:roundedCornerRadius="12dp"
                        app:placeholderImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/agent" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:padding="4dp"
                        android:text="Valentine" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="end"
                android:padding="2dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorAccent"
                android:text="Agents of the week" />
            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="4dp"
                android:layout_margin="4dp"
                android:layout_gravity="end"
                android:alpha=".2"
                android:background="@drawable/button" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:id="@+id/search_view"
                android:layout_marginStart="8dp"
                android:text="Admin Notifications"
                android:textColor="@color/colorAccent" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />
            <i.brains.eronville.XListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"
                android:visibility="gone"
                android:divider="@color/colorTransparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:dividerHeight="20dp"
                android:layout_margin="4dp" />
            <include layout="@layout/xml_notifications" />
            <include layout="@layout/xml_notifications" />
            <include layout="@layout/xml_notifications" />
            <include layout="@layout/xml_notifications" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>